<div class="position-fixed bottom-0 right-0 p-3" style="z-index: 5; right: 0; bottom: 0;">
	<div id="cartToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
		<div class="toast-header bg-primary">
			<img src="{{theme.link}}/assets/icons/cart-empty.png" class="rounded mr-2" height="16" width="16" alt="cart">
			<strong class="mr-auto text-dark mr-2">Item added to cart</strong>
			<small class="text-dark">just now</small>
			<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="toast-body p-3">
			<div class="toast-image">
				<img src="" alt="">
			</div>
			<div class="toast-message">
				<h6>Product name</h6>
				<p class="toast-price"></p>
			</div>

		</div>
	</div>
</div>
